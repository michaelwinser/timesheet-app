# Timesheet App Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# REQUIRED - Google OAuth Credentials
# ============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID (Web application)
# 2. Add authorized redirect URI: http://localhost:8000/auth/callback
#    (or your production URL for TrueNAS deployment)

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# ============================================================================
# REQUIRED - OAuth Redirect URI
# ============================================================================
# Must EXACTLY match the redirect URI configured in Google Cloud Console
#
# For local development:
OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback
#
# For TrueNAS with domain and reverse proxy:
# OAUTH_REDIRECT_URI=https://timesheet.yourdomain.com/auth/callback
#
# For TrueNAS with IP only (not recommended for production):
# OAUTH_REDIRECT_URI=http://192.168.1.100:8000/auth/callback

# ============================================================================
# REQUIRED - Application Secret Key
# ============================================================================
# Used for session encryption and security
# Generate a random secret: python -c "import secrets; print(secrets.token_hex(32))"

SECRET_KEY=change-me-to-a-random-secret-in-production

# ============================================================================
# OPTIONAL - Anthropic API (for LLM classification features)
# ============================================================================
# Get from: https://console.anthropic.com/
# Leave blank to disable LLM classification features

ANTHROPIC_API_KEY=

# ============================================================================
# REQUIRED - PostgreSQL Database Configuration
# ============================================================================
# PostgreSQL connection details
#
# For local development (Docker Compose):
POSTGRES_USER=timesheet
POSTGRES_PASSWORD=changeMe123!
POSTGRES_DB=timesheet
DATABASE_URL=postgresql://timesheet:changeMe123!@localhost:5432/timesheet
#
# For production (TrueNAS):
# POSTGRES_USER=timesheet
# POSTGRES_PASSWORD=your-secure-password-here
# POSTGRES_DB=timesheet
# DATABASE_URL=postgresql://timesheet:your-secure-password@postgres:5432/timesheet

# ============================================================================
# OPTIONAL - Application Settings
# ============================================================================

# Environment: development or production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
